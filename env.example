# xR2 Platform Environment Configuration
# ======================================

# ВАЖНО: Измените все пароли перед развертыванием в production!

# Database Configuration
POSTGRES_PASSWORD=xr2_secure_password_2024_change_me
DATABASE_URL=postgresql://xr2_user:xr2_secure_password_2024_change_me@postgres:5432/xr2_db

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_2024_change_me
REDIS_URL=redis://:redis_secure_password_2024_change_me@redis:6379/0

# Security Configuration
SECRET_KEY=your_super_secret_key_change_in_production_minimum_32_chars
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_secure_password_2024_change_me

# API Security & Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
MAX_REQUESTS_PER_IP_PER_MINUTE=100
MAX_REQUESTS_PER_API_KEY_PER_MINUTE=1000

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS Configuration
CORS_ORIGINS=*

# Monitoring
GRAFANA_PASSWORD=admin_secure_password_2024_change_me

# SSL Configuration (для production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/app.log

# Email Configuration (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# External API Configuration
EXTERNAL_API_BASE_URL=https://api.yourdomain.com
EXTERNAL_API_TIMEOUT=30

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Каждый день в 2:00

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
TIMEOUT=30

