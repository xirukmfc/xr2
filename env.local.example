# xR2 Platform - Local Development Configuration
# ==============================================
# Copy this file to .env and adjust the values for your local setup

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/xr2_local
POSTGRES_PASSWORD=password

# Security Configuration
SECRET_KEY=your_super_secret_key_for_local_development_minimum_32_chars_long
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@localhost.local

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Redis Configuration (Local Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CORS Configuration
CORS_ORIGINS=*
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
MAX_REQUESTS_PER_IP_PER_MINUTE=100
MAX_REQUESTS_PER_API_KEY_PER_MINUTE=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# Performance Configuration
WORKER_PROCESSES=2
MAX_CONNECTIONS=100
TIMEOUT=30

# External API Configuration
EXTERNAL_API_BASE_URL=http://localhost:8000
EXTERNAL_API_TIMEOUT=30

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"

# Email Configuration (Optional for local development)
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Monitoring (Optional for local development)
GRAFANA_PASSWORD=

# SSL Configuration (Not needed for local development)
SSL_CERT_PATH=
SSL_KEY_PATH=
