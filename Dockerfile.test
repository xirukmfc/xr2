# Dockerfile для автотестов
FROM python:3.12-slim

# Установка системных зависимостей для Playwright
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    # Зависимости для Chromium
    libnss3 \
    libnspr4 \
    libatk-bridge2.0-0 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libxss1 \
    libasound2 \
    fonts-liberation \
    fonts-unifont \
    # Дополнительные зависимости из ошибки Playwright
    libcups2 \
    libxfixes3 \
    libpango-1.0-0 \
    libcairo2 \
    && rm -rf /var/lib/apt/lists/*

# Установка рабочей директории
WORKDIR /app

# Копирование файлов проекта
COPY requirements.txt .
RUN pip install -r requirements.txt

# Установка Playwright и браузеров
RUN pip install playwright
RUN playwright install chromium

# Копирование автотестов
COPY auto-test.py .

# Создание директории для скриншотов
RUN mkdir -p test_screenshots

# Создание пустого файла отчета
RUN echo '{}' > test_report.json

# Команда по умолчанию
CMD ["python", "auto-test.py"]