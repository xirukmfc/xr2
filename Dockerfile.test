# Dockerfile для автотестов
FROM python:3.12-slim

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Установка Playwright и браузеров
RUN pip install playwright
RUN playwright install chromium
RUN playwright install-deps chromium

# Установка рабочей директории
WORKDIR /app

# Копирование файлов проекта
COPY requirements.txt .
RUN pip install -r requirements.txt

# Копирование автотестов
COPY auto-test.py .

# Создание директории для скриншотов
RUN mkdir -p test_screenshots

# Создание пустого файла отчета
RUN echo '{}' > test_report.json

# Команда по умолчанию
CMD ["python", "auto-test.py"]